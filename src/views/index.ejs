<body>

  <header class="header" id="header">
    <h1 class="header-h1">Fræðslumyndbandaleigan</h1>
  </header>

  <main class="page-layout">

    <% if(data !=null) { %>
      <% data.categories.forEach(function(categories,index){ %>
        <!-- if there are no videos in this category, don't show the category's title -->
        <% if(Array.isArray(categories.videos) && categories.videos.length) { %>
          <h2 class="videos-title">
            <%- categories.title %>
          </h2>
          <div class="videos-row">
            <% categories.videos.forEach(function(videos){ %>
              <% var vid=helper.filterById(data.videos,videos); %>
                <div class="videos-col">
                  <a class="video-card" href="/video/<%- vid.id %>">
                    <div class="video">
                      <div class="video-image">
                        <img class="video-img" src="<%- vid.poster %>" alt="<%- vid.title %>">
                        <div class="video-duration"><b>
                            <%- helper.timeStamp(vid.duration) %>
                          </b></div>
                      </div>
                    </div>
                    <div>
                      <div class="video-content">
                        <h3 class="video-title">
                          <%- vid.title %>
                        </h3>
                        <p class="video-age">
                          <%- helper.getTimeSince(vid.created) %>
                        </p>
                      </div>
                    </div>
                  </a>
                </div>
                <% }) %>

                      <div class="videos-col">
                        <div class="spacer">
                        </div>
                      </div>


          </div>
          <hr class="line">
                  <% } %>
          <% }) %>
            <% } else { %>
              No video found.
              <% } %>
  </main>
</body>